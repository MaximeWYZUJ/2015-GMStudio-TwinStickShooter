}


//===Vérifications et reset===
if HP&lt;=0
{
    nextx=irandom(room_width)
    nexty=irandom(room_height)
    
    while abs(global.xvaisseau - nextx)&lt;1000 &amp;&amp; abs(global.yvaisseau - nexty)&lt;800
